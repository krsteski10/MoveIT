@model MoveIT.Models.Order

@{
    ViewData["Title"] = "ShowMyPrice";
}

<h3>Show my Price</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Distance" class="control-label"></label>
                <input asp-for="Distance" class="form-control" />
                <span asp-validation-for="Distance" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="LivingArea" class="control-label"></label>
                <input asp-for="LivingArea" class="form-control" />
                <span asp-validation-for="LivingArea" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="BasementAtticArrea" class="control-label"></label>
                <input asp-for="BasementAtticArrea" class="form-control" />
                <span asp-validation-for="BasementAtticArrea" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Piano" /> @Html.DisplayNameFor(model => model.Piano) included?
                </label>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="NumberOfCars" class="control-label"> Number of Cars that will be involed in the process: </label>
                <h4>
                    @Html.DisplayFor(model => model.NumberOfCars)
                </h4>
                <span asp-validation-for="NumberOfCars" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="TotalAmount" class="control-label"> The total amount of the costs: </label>
                <h4>
                    @Html.DisplayFor(model => model.TotalAmount) SEK
                </h4>
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Re-Calculate" class="btn btn-danger" asp-action="GetOrderPrice" />
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-dark">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
